<Application x:Class="WhiteBoardProject.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:WhiteBoardProject"
             xmlns:View="clr-namespace:WhiteBoardProject.View"
             xmlns:ViewModel="clr-namespace:WhiteBoardProject.ViewModel"
             StartupUri="/View/MainView.xaml">
    
    <Application.Resources>

        <ResourceDictionary>
            
            <DataTemplate DataType="{x:Type ViewModel:MainViewModel}">
                <View:MainView></View:MainView>
            </DataTemplate>

            <DataTemplate DataType="{x:Type ViewModel:HomeViewModel}">
                <View:HomeView></View:HomeView>
            </DataTemplate>

            <DataTemplate DataType="{x:Type ViewModel:DrawViewModel}">
                <View:DrawView></View:DrawView>
            </DataTemplate>

            <DataTemplate DataType="{x:Type ViewModel:RegistrationViewModel}">
                <View:RegistrationView></View:RegistrationView>
            </DataTemplate>

            <DataTemplate DataType="{x:Type ViewModel:LoginViewModel}">
                <View:LoginView></View:LoginView>
            </DataTemplate>

        </ResourceDictionary>
         
    </Application.Resources>
</Application>
