<UserControl x:Class="WhiteBoardProject.View.SendEmailView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WhiteBoardProject.View" 
             xmlns:viewmodel="clr-namespace:WhiteBoardProject.ViewModel" 
             d:DataContext="{d:DesignInstance Type=viewmodel:SendEmailViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="1050" d:DesignWidth="1800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    
    
    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="30px"/>
            <RowDefinition Height="0.55*"/>
            <RowDefinition/>
            <RowDefinition Height="40px"/>

        </Grid.RowDefinitions>

        <StackPanel Grid.ColumnSpan="1" Grid.Row="1">
            <GroupBox Header="От"  Style="{StaticResource EmailGroupBox}">
                <TextBox Height="25" Text="{Binding UserEmail}"/>
            </GroupBox>
            
            <GroupBox Header="Ваш пароль"  Style="{StaticResource EmailGroupBox}">
                <TextBox Height="25" Text="{Binding UserPassword}"/>
            </GroupBox>

            <GroupBox Header="Кому" Style="{StaticResource EmailGroupBox}">
                <TextBox Height="25" Text="{Binding ReciverEmail}"/>
            </GroupBox>

            <GroupBox Header="Тема" Style="{StaticResource EmailGroupBox}" >
                <TextBox Height="25" Text="{Binding MailMessage.Subject}"/>
            </GroupBox>

            <GroupBox Header="Приклепленные файлы" Style="{StaticResource EmailGroupBox}"
                      BorderThickness="0" >
                <ItemsControl ItemsSource="{Binding MailMessage.Attachments}"
                              Name="AttachItemBox">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="{Binding Name}"/>
                             <TextBlock Text=", "/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
            </GroupBox>

        </StackPanel>
            
        <GroupBox Header="Тело сообщения"  Grid.Row="2" 
                  Grid.ColumnSpan="2" Style="{StaticResource EmailGroupBox}" 
                  Height="auto"  >
            <TextBox Text="{Binding MailMessage.Body}"/>
        </GroupBox>
        
      

        <StackPanel Grid.Row="3" Orientation="Horizontal">
            <Button Width="60"  Command="{Binding AttachFile}">
                <Button.Background>
                    <ImageBrush ImageSource="/Img/Attach.png"/>
                </Button.Background>
            </Button>
        </StackPanel>

        <Button Style="{StaticResource WindowButton}"
                Content="В главное меню" Grid.Column="1"
                HorizontalAlignment="Right" Width="150"
                Command="{Binding ToMainMenu}"/>
        
        <Button Grid.Column="1" Grid.Row="3"
                Content="Отправить" FontSize="25"
                Command="{Binding SendMessage}" 
                CommandParameter="{Binding ElementName=AttachItemBox}"
                Style="{StaticResource MenuButton}"/>
    </Grid>
</UserControl>
