<UserControl x:Class="AdminPanel.View.ProductOrCategoryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AdminPanel.View"
             mc:Ignorable="d" 
             d:DesignHeight="550" d:DesignWidth="150">

    <UserControl.Resources>
        <Style x:Key="MyButtonSecondStyle" TargetType ="Button">
            <Setter Property="Foreground" Value="White" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Width" Value="80"/>
            <Setter Property="Height" Value="30"/>
            <Setter Property="Margin" Value="0,5,0,6"/>

        </Style>
    </UserControl.Resources>
    <Grid>
        <StackPanel>
            <Button Style="{StaticResource MyButtonSecondStyle}" 
                Content="Продукт"/>
            <Button Style="{StaticResource MyButtonSecondStyle}" 
                    Content="Категория"/>
        </StackPanel>
    </Grid>
</UserControl>
