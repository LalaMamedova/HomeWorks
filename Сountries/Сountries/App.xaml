<Application x:Class="Сountries.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Сountries"
             StartupUri="View/HomeView.xaml"
             xmlns:View ="clr-namespace:Сountries.View"
             xmlns:ViewModel ="clr-namespace:Сountries.ViewModel">
    
    <Application.Resources>
        <ResourceDictionary>

            <DataTemplate DataType="{x:Type ViewModel:MainViewModel}">
                <View:MainView></View:MainView>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type ViewModel:AddCountryViewModel}">
                <View:AddCountryView></View:AddCountryView>
            </DataTemplate>
            
            <DataTemplate DataType="{x:Type ViewModel:HomeViewModel}">
                <View:HomeView></View:HomeView>
            </DataTemplate>


        </ResourceDictionary>
    </Application.Resources>
</Application>
